// prisma/schema.prisma

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             Int       @id @default(autoincrement())
  username       String
  password       String
  profile_picture Bytes?
  gender         String
  email          String
  job_title_id   Int
  admin          Boolean
  created_at     DateTime
  updated_at     DateTime
  job_title      Job_title @relation(fields: [job_title_id], references: [id])
  posts          Post[]
  comments       Comments[]
}

model Post {
  id         Int      @id @default(autoincrement())
  user_id    Int
  content    String
  updated_at DateTime
  created_at DateTime
  user       User     @relation(fields: [user_id], references: [id])
  comments   Comments[]
}

model Comments {
  id       Int      @id @default(autoincrement())
  post_id  Int
  user_id  Int
  content  String
  post     Post     @relation(fields: [post_id], references: [id])
  user     User     @relation(fields: [user_id], references: [id])
}

model Job_title {
  id        Int      @id @default(autoincrement())
  name      String
  team      String
  created_at DateTime
  users     User[]
}
